{
    "extends": [
        "eslint:recommended",  // 使用 ts 解析器
        "plugin:@typescript-eslint/recommended" // eslint 推荐规则
    ],
    "parser": "@typescript-eslint/parser", // 使用 ts 解析器
    "plugins": ["@typescript-eslint"],
    "root": true,
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
    },
    "parserOptions": {
        "project": "./tsconfig.eslint.json",
        "ecmaVersion": 2019,
        "sourceType": "module",
        "ecmaFeatures": {
          "experimentalObjectRestSpread": true
        }
    },
    "rules": {} // 自定义
  }